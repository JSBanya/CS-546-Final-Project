<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>{{ title }}</title>


    <link rel="stylesheet" href="/public/css/home.css">
    {{#each css}}
    	<link rel="stylesheet" href="/public/css/{{this}}.css">
    {{/each}}
</head>
<body>
    <header id="homeBar">
        <div id="homeBarLeft">
            <div id="headerProfileImage" style="background-image: url('/public/images/profile/{{profile.profileImage}}');" onclick="location.href='/home'"></div>
            <p id="headerProfileName">
                {{profile.name}}
                {{profile.firstName}}
                {{profile.lastName}}
            </p>
        </div>
        <div id="homeBarRight">
            {{#if profile.name}}
                <a class="headerLink" id="createJobLink" href="/newjob">Create Job</a>
            {{/if}}
            <a class="headerLink" id="profileLink" href="/account/{{profile._id}}">Profile</a>
            <a class="headerLink" id="logoutLink" href="/logout">Log Out</a>
        </div>
    </header>
    
    {{{body}}}

    <script src="/public/js/jquery-3.4.0.min.js"></script>
	{{#each js}}
        <script src="/public/js/{{this}}.js"></script>
    {{/each}}
</body>
</html>
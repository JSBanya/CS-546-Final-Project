<main>
	<div id="mainContent">
		<!-- Account type selection -->
		<div id="typePage">
			<header class="pageHeader">
				<h2 class="pageTitle">Step 1 - Select an Account Type</h2>
			</header>

			<div id="typeContainer">
				<div id="selectCandidate" class="typeEntry">
					<h2 class="typeHeader">Candidate Account</h2>
					<p class="typeEntryDescription" id="candidateDescription">Experience the best job platform for freelance programmers! Search and apply to jobs, and create a custom profile to showcase your experience and skills.</p>
				</div>
				<div id="selectEmployer" class="typeEntry">
					<h2 class="typeHeader">Employer Account</h2>
					<p class="typeEntryDescription">Hire the best programmers for the job by creating new job openings! Create a custom profile to describe your company.</p>
				</div>
			</div>
		</div>

		<!-- Candidate signup -->
		<div id="candidatePage">
			<header class="pageHeader">
				<h2 class="pageTitle">Step 2 - Enter Your Information</h2>
			</header>

			<form class="infoForm" id="candidateForm" action="/create/candidate" onsubmit="return validateCandidateForm()" method="post" enctype="multipart/form-data">
				<div class="formSection">
					<h3 class="formSectionHeader">1. Name and Email</h3>
					<span class="formLine">
						<input type="text" name="candidateFirstName" id="candidateFirstName" class="formTextInput" placeholder="First Name" maxlength="30" required>
						<input type="text" name="candidateLastName" id="candidateLastName" class="formTextInput" placeholder="Last Name" maxlength="30" required>
					</span>

					<span class="formLine">
						<input type="email" name="candidateEmail" id="candidateEmail" class="formTextInput" placeholder="Email" maxlength="30" required>
					</span>
				</div>

				<div class="formSection">
					<h3 class="formSectionHeader">2. Biography</h3>
					<span class="formLine">
						<textarea name="candidateBiography" id="candidateBiography" class="formTextInput" rows=3 placeholder="Say something about yourself!" maxlength="500"></textarea>
					</span>
				</div>

				<div class="formSection">
					<h3 class="formSectionHeader">3. Your Skills</h3>
					<ol class="listContainer" id="skillsContainer">
					</ol>
					<button type="button" class="addButton" onclick="addSkill()">New Skill</button>
				</div>

				<div class="formSection">
					<h3 class="formSectionHeader">4. Previous Experience</h3>
					<ul class="listContainer" id="experienceContainer">
					</ul>
					<button type="button" class="addButton" id="addExperienceButton" onclick="addExperience()">New Experience</button>
				</div>

				<div class="formSection">
					<h3 class="formSectionHeader">5. Profile Picture</h3>
					<input type="file" accept="image/png, image/jpeg" name="profileImage" class="formTextInput">
				</div>

				<div class="formSection">
					<h3 class="formSectionHeader">6. Password</h3>
					<span class="formLine">
						<input type="password" name="candidatePassword" id="candidatePassword" class="formTextInput" placeholder="Password" minlength="8" maxlength="30" required>
					</span>

					<span class="formLine">
						<input type="password" name="candidateConfirmPassword" id="candidateConfirmPassword" class="formTextInput" placeholder="Confirm Password" minlength="8" maxlength="30" required>
					</span>
				</div>



				<p class="error"></p>
				<input type="submit" value="Create Account" class="submitButton">
			</form> 
		</div>

		<!-- Employer signup -->
		<div id="employerPage">
			<header class="pageHeader">
				<h2 class="pageTitle">Step 2 - Enter Your Company's Information</h2>
			</header>
			<form class="infoForm" id="employerForm" action="/create/employer" onsubmit="return validateEmployerForm()" method="post">
				<div class="formSection">
					<h3 class="formSectionHeader">1. Name and Email</h3>
					<span class="formLine">
						<input type="text" name="employerName" id="employerName" class="formTextInput" placeholder="Company Name" maxlength="50" required>
						<input type="email" name="employerEmail" id="employerEmail" class="formTextInput" placeholder="Email" maxlength="30" required>
					</span>
				</div>

				<div class="formSection">
					<h3 class="formSectionHeader">2. Description</h3>
					<span class="formLine">
						<textarea name="employerDescription" id="employerDescription" class="formTextInput" rows=3 placeholder="Say something about your company!" maxlength="500"></textarea>
					</span>
				</div>

				<div class="formSection">
					<h3 class="formSectionHeader">3. Password</h3>
					<span class="formLine">
						<input type="password" name="employerPassword" id="employerPassword" class="formTextInput" placeholder="Password" minlength="8" maxlength="30" required>
					</span>

					<span class="formLine">
						<input type="password" name="employerConfirmPassword" id="employerConfirmPassword" class="formTextInput" placeholder="Confirm Password" minlength="8" maxlength="30" required>
					</span>
				</div>

				<p class="error"></p>
				<input type="submit" value="Create Account" class="submitButton">
			</form>
		</div>
	</div>
</main>